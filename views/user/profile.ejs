<% layout('../layouts/layout') -%>

    <div class="container main-secction">
        <div class="row" style="padding-top: 3rem">
            <div class="row user-left-part">
                <div class="col-md-3 col-sm-3 col-xs-3 user-profil-part pull-left">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12  columns">

                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 user-detail-section1 text-center" style="padding: 1rem 0">
                            <a class="btn btn-success btn-block follow" href="/">Về trang chủ</a>
                            <a class="btn btn-warning btn-block" href="/user/signout">Đăng xuất</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 col-sm-9 col-xs-12 pull-right profile-right-section">
                    <div class="row profile-right-section-row">
                        <div class="col-md-12 profile-header">
                            <div class="row" style="padding-top: 1rem">
                                <div class="col-md-12 col-sm-6 col-xs-6 profile-header-section1 pull-left">
                                    <h1>
                                        <%= user.firstname + " " + user.lastname%>
                                    </h1>
                                    <h5>Level:
                                        <%=user.level%>
                                    </h5>
                                </div>
                                <div class="col-md-4 col-sm-6 col-xs-6 profile-header-section1 text-right pull-rigth"></div>
                            </div>
                        </div>
                        <% var trueQuizRatio = "width: " + (user.trueQuizQuantity /
          (user.falseQuizQuantity +
          user.trueQuizQuantity)).toFixed(1).toString(); %>
                            <% var
          falseQuizRatio = 1 - trueQuizRatio; %>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <ul class="nav nav-tabs" role="tablist">
                                                <li class="nav-item">
                                                    <a class="nav-link active" href="#profile" role="tab" data-toggle="tab">
                                                        <i class="fas fa-user-circle"></i>Thông tin cá nhân</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a id="game-info-tab" class="nav-link" href="#buzz" role="tab" data-toggle="tab">
                                                        <i class="fas fa-info-circle"></i> Thông tin trò chơi</a>
                                                </li>
                                            </ul>

                                            <!-- Tab panes -->
                                            <div class="tab-content">
                                                <div role="tabpanel" class="tab-pane fade show active" id="profile" style="padding: 1rem 0.5rem">
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <label>Họ</label>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <p>
                                                                <%= user.firstname %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <label>Tên</label>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <p>
                                                                <%= user.lastname %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <label>Email</label>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <p>
                                                                <%= user.email %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div role="tabpanel" class="tab-pane fade" id="buzz" style="padding: 1rem 0.5rem">
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <label>Cấp độ</label>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <p>
                                                                <%= user.level %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <label>Kinh nghệm</label>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <p>
                                                                <%= user.exp %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <label>Tỉ lệ trả lời đúng</label>
                                                        </div>
                                                        <div class="col-md-1">
                                                            <%= user.trueQuizQuantity %>
                                                        </div>
                                                        <%- user.trueQuizRaitoProcess %>

                                                            <div class="col-md-1">
                                                                <%= user.falseQuizQuantity%>
                                                            </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <label>Chuỗi câu trả lời đúng dài nhất</label>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <p>
                                                                <%= user.trueQuizSeries %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>