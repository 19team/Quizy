<% layout('../layouts/layout') -%>
  <script type="text/javascript" src="../javascripts/QuizGame.js"></script>
  <script type="text/javascript" src="../javascripts/classic-mode-controller.js"></script>

  <div class="container" id="game-container">
    <div class="row" style="padding: 30px 0px;">
      <!-- <div class="col-12 col-md-6 col-xl-3 d-md-flex" style="width: 25%;"></div> -->
      <div id="intro-stage" class="col-1 col-md-8 col-xl-8" style="min-height: 540px">
        <!-- <span
        style="font-size: 100px; color: #14a76c; font-family: LinotteBold; text-align: center; margin: 0 auto; width: inherit;"
        >Classic</span
      > -->
        <div>
          <p style="font-size: 90px; text-align: center; font-family: LinotteHeavy; color:#14a76c">
            Classic
          </p>
        </div>
        <div class="game-info">
          <ul>
            <li>
              Số lượng câu hỏi: 10
            </li>
            <li>
              Lĩnh vực: bất kỳ
            </li>
            <li>Cách chơi: chọn đáp án đúng trong 4 đáp án cho trước</li>
          </ul>
        </div>
        <a id="" class="start-btn rounded-btn" class="nav-item text-center">Bắt đầu</a>
      </div>
      <div id="game-stage" class="col-12 col-md-6 col-xl-3" style="display: none;min-height: 540px">
        <div>
          <p style="font-size: 90px; text-align: center; font-family: LinotteHeavy; color:#14a76c">
            Classic
          </p>
        </div>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr></tr>
            </thead>
            <tbody>
              <tr>
                <td id="topic"></td>
                <td id="countdown"></td>
              </tr>
              <tr></tr>
            </tbody>
          </table>
        </div>
        <div>
          <p id="question" style="padding: 15px 15px;font-size: 30px;width: 100%;">
            <strong></strong>
          </p>
          <div>
            <button id="answerA" class="btn btn-light text-center d-flex float-none btn-answer" type="button" style="width: 100%;"></button>
          </div>
          <div>
            <button id="answerB" class="btn btn-light text-center d-flex float-none btn-answer" type="button" style="width: 100%;"></button>
          </div>
          <div>
            <button id="answerC" action="/getQuestion" method="post" class="btn btn-light text-center d-flex float-none btn-answer" type="button"
              style="width: 100%;"></button>
          </div>
          <div>
            <button id="answerD" class="btn btn-light text-center d-flex float-none btn-answer" type="button" style="width: 100%;"></button>
          </div>
          <div id="nextQuestion" style="display: none;">
            <button class="btn btn-light text-center d-flex float-none" type="button" style="width: 100%;">
              Câu tiếp
            </button>
          </div>

          <div class="question-container"></div>
        </div>
      </div>
      <div id="end-stage" class="col-1 col-md-8 col-xl-8" style="display: none;min-height: 540px">
        <div>
          <p style="font-size: 90px; text-align: center; font-family: LinotteHeavy; color:#14a76c">
            Classic
          </p>
        </div>
        <div>
          <p style="font-size: 40px; color:#ffe400; font-family: LinotteBold; margin-left: 20px;">
            Kết thúc trò chơi!
          </p>
          <p id="result" style="color:#14a76c; font-size: 25px;padding-left: 10px;margin-left: 20px;"></p>
          <a id="" class="start-btn rounded-btn" class="nav-item text-center">Chơi lại</a>
        </div>
      </div>
      <!-- <div class="col-12 col-md-6 col-xl-3" style="width: 25%;"></div> -->
    </div>
  </div>